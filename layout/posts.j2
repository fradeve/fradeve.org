{% extends "base.j2" %}

{% block main -%}
<article>

<h1 class="title">
    <a href="{{ content_url(resource.url) }}">
        {{ resource.meta.title }}
    </a>
</h1>

<time datetime="{{ resource.meta.created.strftime('%Y-%m-%d') }}">
    Posted on {{ resource.meta.created.strftime('%d %b %Y') }}
</time>
<br>
<tags>tags:
{% for tag in resource.meta.tags %}
	<a href="/tags/{{tag}}.html">{{tag}}</a>{% if tag != resource.meta.tags[-1] %},{% endif %} 
{% endfor %}
</tags>

<h6 class="description">
    <a href="{{ content_url(resource.url) }}">
        {{ resource.meta.description }}
    </a>
</h6>

{% filter markdown|typogrify -%}
{% mark post -%}
{% block post -%}{%- endblock %}
{%- endmark %}
{%- endfilter %}
</article>
{% include "disqus.j2" %}
{%- endblock %}
