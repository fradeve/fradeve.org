  Fernando Paolo <fspaolo@gmail.com>
  April 23, 2011

*/

* {
    vertical-align: baseline;
    font-weight: inherit;
    font-family: inherit;
    font-style: inherit;
    text-decoration: inherit;
    font-size: 100%;
    padding: 0;
    border: 0;
    margin: 0;
}

table {
    border-collapse: collapse;
}

:focus {
    outline: 0;
}

::-moz-focus-inner {
    border: 0;
}

/* clearfix */
.clear:after {
    content: ".";
    display: block;
    clear: both;
    visibility: hidden;
    line-height: 0;
    height: 0;
}

.clear {
    display: block;
}


* html .clear {
    height: 1%;
}

body{
    background: #fff url(../images/bg.gif) 0 0 repeat-x;
    /*
    font-family: Georgia, "Times New Roman", serif;
    */
    font-family: "lucida grande", "lucida sans unicode", arial, sans-serif;
    font-size: 14px;
    line-height: 1.7;
    color: #555;
    padding: 0;
    margin: 0;
    height: 100%;
    }

#bar {
    height: 5px;
    width: 100%;
    background-color: #555;
    padding: 0;
    margin: 0;
    }

/* headlines */

h1, h2, h3, h4, h5 {
    font-family: "Helvetica Neue", helvetica, 'Myriad Pro', sans-serif;
    margin: 0;
    margin-top: 18px; 
    }
h2, h3, h4, h5 {
    color: #181818;
}
h1 {
    font-size: 40px;
}
h2, h2 a {
    font-size: 26px;
    }
h3, h3 a { 
    font-size: 16px; 
    font-weight: bold;
    }
h4, h4 a{
    font-size: 14px; 
    font-weight: bold;
}
h6.description {
    font-family: Georgia, "Times New Roman", serif;
    font-size: 26px;
    font-style: italic;
    font-weight: normal;
    line-height: 1.2;
    margin-top: 35px;
    }
h2 a, h3 a, h4 a, h5 a, h6 a, 
h2 a:visited, h3 a:visited, h4 a:visited, h5 a:visited, h6 a:visited { 
    color: #181818;
    }
h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover {
    background-color: #FFF091;
    text-decoration: none;
    }

/* home */

img.splash {
    margin-top: -40px;
    text-align: right;
}

/* logo */

.profiles {
    float: right;
    text-align: left;
    line-height: 1;
    margin-bottom: 15px;
    padding: 0;
    }
    .profiles h1 {
        font-family: helvetica, arial, sans-serif;
	font-size: 40px;
	font-weight: bold;
        text-transform: lowercase;
	line-height: 1.35;
	letter-spacing: -1px;
        background: #181818;
        color: #FFD200;
        padding: 0.2em 0.3em;
        margin-top: 2px;
        margin-bottom: -2px;
        text-shadow: 0 0 0 #181818;
        border: none;
        border-bottom: 2px solid #FFD200; 
        }
    .profiles span {
        color: white;
        }
    .profile {
        font-family: helvetica, arial, sans-serif;
        text-decoration: none;
        font-size: 11px;
        font-weight: bold;
        background: #181818;
        color: #FFD200;
        padding: 0.8em 1.6em;
        text-shadow: 0 0 0 #181818;
        border: none;
        }
    .profile:hover {
        color: white;
        text-decoration: none;
        }
    .profiles ul { 
        margin-top: 15px; 
        padding-left: 0; 
        }
    .profiles li, .profiles ul {
        display: inline;
        }
    .profiles li {
        margin-right: 0;
        }
    .profile li:first-child {
        margin-left: 0;
        margin-right: 20px;
        }

/* header */

header {
    font-family: "lucida grande", "lucida sans unicode", arial, sans-serif;
    font-size: 14px;
    text-transform: lowercase;
    width: 510px;
    padding: 1.5em 0 0 0;
    border: 0;
    margin: 0 auto;
    margin-bottom: 100px;
    }

.nav ul {
    display: block;
    text-align: center;
    color: #CCC;
    }
    .nav li {
        display: inline;
        color: #181818;
        margin: 0 20px;
        }
    .nav a {
        color: #181818;
        text-decoration: none;
        border: none;
        }
    .nav ul:hover a:hover {
        background-color: #FFF091;
        text-decoration: none;
        border: none;
        }

/* content */

.content {
    width: 510px;
    margin: 0 auto;
    }
    article.post p a , ul a{
        color: #555;
        text-decoration: none;
        border-bottom: 1px solid #BBB;
        }
    article.post a, p a:visited, ul a:visited {
        color: #555;
        }
    article.post p a:hover, p a:active, ul a:hover {
        background-color: #FFF091;
        text-decoration: none;
        border-bottom: 1px solid #BBB;
        }

article.post h1, h1.title {
        font-family: helvetica, arial, sans-serif;
	font-weight: bold;
        text-transform: lowercase;
	line-height: 1.35;
	letter-spacing: -1px;
        margin-bottom: -8px;
    }
    h1.title a {
        background: #181818;
        color: #FFD200;
        padding: 0.2em 0.3em;
        padding-top: 0.35em;
        margin-top: 2px;
        text-shadow: 0 0 0 #181818;
        border: none;
    }
    article.post p {
        margin: 0;
        margin-bottom: 20px;
    }
    article.post ul {
        list-style-type: square;
        margin: 0; 
        padding: 0;
        padding-left: 18px;
    }
    article.post img {
        border: 5px solid #181818;
        max-width: 96%;
        margin: 0;
        /*
        display: block;
       -moz-box-shadow: 1px 1px 7px rgba(153, 153, 153, 0.2);
       -webkit-box-shadow: 1px 1px 7px rgba(153, 153, 153, 0.2);
       background: none repeat scroll 0 0 snow;
       border: 1px solid #EEE;
       margin: 0;
       margin-bottom: 24px;
       padding: .3125em;
       */
    }

.post time {
    font-family: Georgia, "Times New Roman", serif;
    font-style: italic;
    font-size: 13px;
    color: #999;
}
/* fotter */

footer {
    height: 20px;
    }

.blog_excerpt {
    padding-bottom: 24px;
    } 
    .blog_excerpt .post time {
        font-style: italic;
        color: #999;
        float: none;
        clear: left;
        }
    .blog_excerpt .button {
        float: right;
        }

/* listing */

.listing {
    margin-top: 24px;
}

.listing img {
    border: 4px solid #181818;
    margin: 0 0 1em 0;
    float: left;
    width: 120px;
    height: 120px;
    margin-right: 16px;
    /*
    -moz-box-shadow: 1px 1px 7px rgba(153, 153, 153, 0.2);
    -webkit-box-shadow: 1px 1px 7px rgba(153, 153, 153, 0.2);
    background: none repeat scroll 0 0 snow;
    border: 1px solid #EEE;
    margin: 0;
    margin-right: 15px;
    margin-bottom: 14px;
    padding: .3125em;
    */
}

.listing li {
    background-color: white;
    list-style-type: none;
    float: left;
    width: 100%;
    margin-bottom: 10px;
    padding: 0;
}

.listing li:nth-child(2){
    margin-right: 0;
}

.listing li:nth-child(3){
    clear: left;
}

.listing li p {
    margin-bottom: 12px;
}

.listing time {
    font-family: Georgia, "Times New Roman", serif;
    font-style: italic;
    text-align: right;
    display: block;
    color: #999;
    border-bottom: 1px dotted #bbb;
    padding-top: 4px;
    font-size: 14px;
}


ul.tags{
    font-family: Palatino, Baskerville, Georgia, "Times New Roman", sans-serif;
    text-transform: uppercase;
    font-size: 13px;
    color: #999;
    text-align: right;
    margin-top: 6px;
    margin-bottom: 20px;
}

ul.tags li{
    list-style-type: none;
    display: inline;
}

ul.tags li a{
    color: #999;
    text-decoration: none;
}

h1.tag:before,
ul.tags li a:before{
    content: '\00AB';
}

h1.tag:after,
ul.tags li a:after{
    content: '\00BB';
}

ul.tags li a:hover{
    background-color: #FFF091;
    text-decoration: none;
}


a.backlink{
    display:block;
    line-height: 24px;
    margin-bottom: 12px;
}

a.backlink:before{
    content: '\2190';
}

a.prev:before{
    content: '\00AB';
}

a.next:after{
    content: '\00BB';
}

a.prev{
    margin-right: 12px;
}

a.prev,
a.next{
    display: block;
    float: left;
    margin-bottom: 12px;
}

a.next{ float: right };

a.backlink:hover, a.prev:hover, a.next:hover{
    background-color: #FFF091;
    text-decoration: none;
}

.post_nav a.disabled{
    color: #ccc;
}

.post_nav a{
    color: #555;
    text-decoration: none;
    text-shadow: 0px 2px 0px #fff;
}

.post_nav div{
    display: block;
    float: left;
    width: 58px;
    overflow: hidden;
    margin-left: 0px;
}

#facebook_like{
    margin-top: 1px;
}

.archives ul.posts{
    margin-top: 24px;
}

.archives li.post{
    list-style-type: none;
    border-bottom: 1px dotted #bbb;
    padding: 12px 0;

}

.archives li.post time {
    color: #999;
    text-shadow: 0px 2px 0px #fff;
    margin-right: 24px;
    display: block;
    width: 120px;
}

.archives li.post a{
    float: left;
}

.archives ul.tags{
    float: right;
    margin-bottom: 0;
}

/* code */

pre, code {
    font-family: 'DejaVu Sans Mono', 'Bitstream Vera Sans Mono',
                 Consolas, Monaco, 'Lucida Console', monospaced;
    font-size: 12px;
    overflow-x: auto;
    background-color: white;
    text-rendering: optimizeLegibility;
    width: 100%;
    }
    pre {
        margin-top: 20px;
        margin-bottom: 20px;
        margin-left: 20px;
        border: 1px solid #eee;
        border-left: 5px solid #181818;
        padding: .8em 1em;
    }
    pre::-webkit-scrollbar {
        height: 20px;
    }
    pre::-webkit-scrollbar-button:start,
    pre::-webkit-scrollbar-button:end {
        display: none;
    }
    pre::-webkit-scrollbar-track-piece  {
        background-color: #eee;
    }
    pre::-webkit-scrollbar-thumb {
        background-color: #bbb;
        border: 7px solid #eee;
        -webkit-background-clip: padding-box;
        -webkit-border-radius: 12px;
    }
    p code, li code {
        border: 1px solid #ccc;
        font-size: 12px;
        padding: 1px 3px;
        line-height: 15px;
        margin: 0;
        white-space: nowrap;
    }
